{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@school/shared": [
        "../shared/dist/index.d.ts"
      ],
      "@school/shared/*": [
        "../shared/dist/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../shared/src/types/**/*.d.ts",
    "src/types/express.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma.config.ts"
  ]
}